<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/flames"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="82dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/main_menu" />

    <Button
        android:id="@+id/one_player"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/one_player_button" />

    <Button
        android:id="@+id/exit_game"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/exit_game_button" />

    <RelativeLayout android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="wrap_content" android:gravity="center">
        
    </RelativeLayout>
    
</LinearLayout>